<!DOCTYPE html>
<html>

<head lang="en">
    <meta charset="UTF-8">
    <!-- <meta http-equiv="refresh" content="0;url=?dl=true"> -->
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0">
    <meta name="robots" content="noindex, nofollow">

    <title></title>

</head>
<style>
    body {
        margin: 0px;
        padding: 0px;
        min-height: 100%;
        position: relative;
    }

    #helper {
        margin: auto;
        width: 80%;
        background: #fff;
        padding: 20px 20px 10px 20px;
        font-family: pfhandbookproregular, sans-serif;
    }

    .text {
        font-size: 20px;
        max-width: 480px;
    }

    h1 {
        color: #CC3399;
    }

    h2 {
        color: #CC3399;
        font-size: 24px;
        margin-bottom: 6px
    }

    img {
        margin-top: 15px;
        max-width: 480px;
        display: block;
    }


    span {
        cursor: pointer;
        color: #0059bc
    }

    .divider {
        width: 100%;
        margin-top: 10px;
        border-bottom: 2px dotted #7FCD00;
    }

    #arrow {
        position: fixed;
        right: 20px;
        bottom: 40%;
        width: 270px;
    }

    #ok {
        color: #7FCD00;
        text-shadow: #464646 0 0 2px, #464646 0 0 2px;
        -webkit-text-shadow: #464646 0 0 2px, #464646 0 0 2px;
        font-size: 53px;
        text-align: center;
    }

    #arrow img {
        width: 70px;
        height: 100px;
        margin-left: 200px;
    }

    #overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #000000;
        opacity: 0.8;
    }

    .button {

        font-family: PFHandbookProRegular, sans-serif;
        background-color: #4a8bf5;
        padding: 0px 10px;
        font-size: 18px;
        line-height: 42px;
        font-weight: lighter;
        color: #FFF;
        text-align: center;
        cursor: pointer;
        text-decoration: none;
        text-transform: uppercase;
        margin: auto;
        width: 70px;
        display: inline-block;
        vertical-align: middle;
    }

    #next {
        position: fixed;
        bottom: 50px;
        right: 20px;
        display: none;
    }


    .screenshot {
        box-shadow: 0 0 3px 0px rgba(0, 0, 0, 0.2);
    }
</style>

<body>
    <div id="overlay"></div>


    <div id="helper">
        <div id="arrowblock">

            <div id="arrow">
                <div id="ok">Press '<div class="button">OK</div>'</div>
                <img src="/helper/arrow.png" width="100%">
            </div>
            <div class="button" id="next" onclick="arrowClick()">NEXT</div>
        </div>

        <div class="text">
            Download started...
            <div id="mobile">
                <img src="/helper/mobile1.jpg" width="100%">
                <img src="/helper/mobile2.png" width="100%">
            </div>
        </div>

        <h1>Troubleshooting</h1>
        <h2>Step 1 </h2>
        <div class="text">
            If installation is blocked, go to your settings
            <img class="screenshot" src="/helper/1.png" width="100%">
        </div>

        <h2>Step 2 </h2>
        <div class="text">
            Enable 'Allow installation of apps from sources other than the Play Store'
            <img class="screenshot" src="/helper/3.jpg" width="100%">

        </div>
        <h2>Step 3 </h2>
        <div class="text">Go to your browser and <span onclick="location.reload();">re-download</span> app again
        </div>
    </div>

    <script>

        var mobile = false;
        var chrome = false;


        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            mobile = true;
            if (/Chrome/i.test(navigator.userAgent)) {
                chrome = true;
            }
        }

        if (mobile == false) {
            document.getElementById('mobile').style.display = 'none';
        }

        if (chrome == false) {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('arrowblock').style.display = 'none';
        }

        function arrowClick() {
            document.getElementById("arrowblock").style.display = 'none';
            document.getElementById("overlay").style.display = 'none';

        }

        setTimeout(function () {

            document.getElementById("next").style.display = 'block';

        }, 2000);
        
        function redirectToDownload() {
            window.location.href = "?dl=true";
        }

        redirectToDownload();



    </script>
</body>

</html>